{
    "compilerOptions": {
        "outDir": "dist",
        "rootDir": "src",
        "target": "ES2018",
        "module": "commonjs",
        "declaration": true,
        "noImplicitAny": false,
        "removeComments": true,
        "noLib": false,
        "skipLibCheck": true,
        "allowSyntheticDefaultImports": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "resolveJsonModule": true,
        "sourceMap": true,
        "lib": ["dom", "es6", "ESNext.AsyncIterable"]
    },
    "include": ["src", "src/config"],
    "exclude": ["node_modules", "dist", "test"]
}